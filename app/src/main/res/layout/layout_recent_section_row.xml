<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:background="@drawable/background_selector_chat_msg_row"
    android:padding="10dp">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/recent_call_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="5dp"
        android:src="@drawable/ic_call_missed_outgoing" />

    <TextView
        android:id="@+id/recent_caller_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/recent_call_icon"
        android:fontFamily="sans-serif"
        android:text="No Name"
        android:textColor="@color/colorAccent" />

    <TextView
        android:id="@+id/recent_caller_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/recent_caller_name"
        android:layout_toEndOf="@+id/recent_call_icon"
        android:text="103"
        android:textColor="@color/colorAccent" />

    <TextView
        android:id="@+id/text_view_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="90dp"
        android:text="Duration"
        android:textColor="@color/colorAccent" />

    <TextView
        android:id="@+id/duration_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/call_day_or_date"
        android:layout_marginEnd="90dp"
        android:text="00:00:05"
        android:textColor="@color/colorAccent" />

    <TextView
        android:id="@+id/call_day_or_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:text="Today"
        android:textColor="@color/colorAccent" />

    <TextView
        android:id="@+id/call_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/call_day_or_date"
        android:text="01:39 PM"
        android:textColor="@color/colorAccent" />

</RelativeLayout>